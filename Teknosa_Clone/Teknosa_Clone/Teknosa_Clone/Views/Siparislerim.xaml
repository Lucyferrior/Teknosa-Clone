<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Teknosa_Clone.Views.Siparislerim"
    Shell.NavBarIsVisible="true"
    Shell.BackgroundColor="White"
    Shell.ForegroundColor="Black"
    Shell.TitleColor="Black"
    Title="Siparişlerim">


    <ContentPage.Content>
        <Grid >
            <StackLayout VerticalOptions="Center" Orientation="Vertical" HorizontalOptions="Center">
                <Image Source="https://img.icons8.com/color/344/info.png" HeightRequest="70"/>
                <Label Text="Henüz Siparişiniz Bulunmuyor" FontSize="Medium" 
                       TextColor="Black"/>
                <Button Text="Alışverişe Başla" TextColor="White" 
                        FontSize="12"
                        BackgroundColor="{StaticResource Primary}"
                        CornerRadius="25"
                        Padding="50,0"
                        HorizontalOptions="Center"/>
            </StackLayout>


        </Grid>

    </ContentPage.Content>
</ContentPage>

